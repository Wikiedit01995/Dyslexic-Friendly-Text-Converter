{
  "manifest_version": 3,
  "name": "Dyslexic Friendly Text Converter",
  "version": "1.0",
  "description": "Converts normal text on web pages to dyslexic-friendly formats.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "64": "icon64.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "64": "icon64.png",
    "128": "icon128.png"
  }
}